<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/red_qatar"
    tools:context=".Screens.PredictionScreen">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/borderGroupSelectionRight"
        app:layout_constraintStart_toStartOf="@id/borderGroupSelectionLeft"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/empty_divider"
            android:orientation="vertical"
            android:showDividers="middle">

            <Button
                android:id="@+id/buttonA"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_a"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO A"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonB"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_b"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO B"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonC"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_c"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO C"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonD"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_d"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO D"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonE"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_e"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO E"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonF"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_f"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO F"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonG"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_g"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO G"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonH"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/group_h"
                android:fontFamily="@font/arial_bold"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="GRUPPO H"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/borderGroupSelectionLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/borderGroupSelectionRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/borderGroupSelectorTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>