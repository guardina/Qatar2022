<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#610e2a">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorderPlacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorderPlacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topBorderPlacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottomBorderPlacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>

    <ScrollView
        android:id="@+id/placementView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/my_background"
        app:layout_constraintBottom_toTopOf="@id/bottomBorderPlacement"
        app:layout_constraintEnd_toEndOf="@id/rightBorderPlacement"
        app:layout_constraintStart_toStartOf="@id/leftBorderPlacement"
        app:layout_constraintTop_toBottomOf="@id/topBorderPlacement">

        <LinearLayout
            android:id="@+id/placementLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>