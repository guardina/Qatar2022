<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#610e2a">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/borderProfileLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/borderProfileRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divisorLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>




    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/divisorLine"
        app:layout_constraintEnd_toEndOf="@id/borderProfileRight"
        app:layout_constraintStart_toStartOf="@id/borderProfileLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_user"
        android:foreground="@drawable/my_image_holder"/>

    <TextView
        android:id="@+id/profilePicText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:paddingTop="10dp"
        android:gravity="top|center_horizontal"
        android:textSize="20sp"
        android:src="@drawable/my_image_holder"
        app:layout_constraintBottom_toTopOf="@id/divisorLine"
        app:layout_constraintEnd_toEndOf="@id/borderProfileRight"
        app:layout_constraintStart_toStartOf="@id/borderProfileLeft"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/firstnameCreator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome"
        app:layout_constraintStart_toStartOf="@id/borderProfileLeft"
        app:layout_constraintEnd_toEndOf="@id/borderProfileRight"
        app:layout_constraintTop_toBottomOf="@id/divisorLine"
        app:layout_constraintBottom_toTopOf="@id/lastnameCreator"/>

    <EditText
        android:id="@+id/lastnameCreator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Cognome (Opzionale)"
        app:layout_constraintStart_toStartOf="@id/borderProfileLeft"
        app:layout_constraintEnd_toEndOf="@id/borderProfileRight"
        app:layout_constraintTop_toBottomOf="@id/firstnameCreator"
        app:layout_constraintBottom_toTopOf="@id/surnameCreator"/>

    <EditText
        android:id="@+id/surnameCreator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        app:layout_constraintStart_toStartOf="@id/borderProfileLeft"
        app:layout_constraintEnd_toEndOf="@id/borderProfileRight"
        app:layout_constraintTop_toBottomOf="@id/lastnameCreator"
        app:layout_constraintBottom_toTopOf="@id/saveProfileButton"/>

    <Button
        android:id="@+id/saveProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:text="SALVA"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/buttonRight"
        app:layout_constraintStart_toStartOf="@id/buttonLeft"
        app:layout_constraintTop_toBottomOf="@id/surnameCreator"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>